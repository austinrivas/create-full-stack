{
  "name": "server",
  "version": "0.1.0",
  "private": true,
  "main": "./src/index.ts",
  "scripts": {
    "build": "tsc",
    "start": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"green.bold,cyan.bold\" \"yarn watch-ts\" \"yarn watch-node\"",
    "start-production": "node -r cfs-dotenv/config ./build/index.js",
    "watch-node": "nodemon -r cfs-dotenv/config ./build/index.js",
    "watch-ts": "tsc -w"
  },
  "dependencies": {
    "apollo-server-express": "^2.13.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "graphql": "^14.2.1",
    "pg": "^8.3.0",
    "pg-hstore": "^2.3.3",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.25",
    "typescript": "3.9.2"
  },
  "devDependencies": {
    "cfs-dotenv": "0.1.2",
    "concurrently": "^5.2.0",
    "nodemon": "^2.0.4"
  }
}
