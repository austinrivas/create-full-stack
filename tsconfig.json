{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "build",
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "allowJs": false,
      "resolveJsonModule": true
  },
  "include": [
      "src"
  ]
}