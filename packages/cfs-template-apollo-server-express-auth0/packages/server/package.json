{
  "name": "server",
  "version": "0.1.0",
  "private": true,
  "main": "./src/index.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"green.bold,cyan.bold\" \"yarn watch-ts\" \"yarn watch-node\"",
    "start-production": "node -r cfs-dotenv/config ./build/index.js",
    "test": "jest --watch",
    "test:coverage": "jest --watchAll --coverage",
    "typeorm": "typeorm",
    "watch-node": "nodemon -r cfs-dotenv/config ./build/index.js",
    "watch-ts": "tsc -w"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "dependencies": {
    "apollo-server-express": "^2.18.0",
    "apollo-server-testing": "^2.18.0",
    "cfs-dotenv": "^0.1.5",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "graphql": "^15.3.0",
    "jwks-rsa": "^1.9.0",
    "pg": "^8.3.3",
    "pg-hstore": "^2.3.3",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.26"
  },
  "devDependencies": {
    "@types/jest": "^26.0.13",
    "common": "0.1.0",
    "concurrently": "^5.3.0",
    "jest": "^26.4.2",
    "nodemon": "^2.0.4",
    "sqlite3": "^5.0.0",
    "ts-jest": "^26.3.0",
    "typescript": "^4.0.2"
  }
}
